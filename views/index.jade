extends layout
block extra_css
    link(href='/stylesheets/bootstrap.css', type='text/css', rel='stylesheet')
block content
    section.outer
        nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
            div.container
                header.navbar-header
                    button(type='button', data-toggle='collapse', data-target='.navbar-collapse').navbar-toggle
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='#') Demo Tools
                header.navbar-collapse.collapse
                    ul.nav.navbar-nav
                        li: a.run(href='#') Run
                        li: a(href='#') Browse All Project
                    ul.nav.navbar-nav.navbar-right
                        li: a(href='/signin') Sign In
                        li: a(href='/signup') Sign Up
    section.editor-wrapper
        div.row.editor-row
            article.col-xs-6.html.editor-window
                span.editor-label(data-toggle='modal',data-target='#html-setting')
                    span HTML
                    i.glyphicon.glyphicon-cog.setting.html-setting
                div.demo-editor#editor-html
            article.col-xs-6.css.editor-window
                span.editor-label(data-toggle='modal',data-target='#css-setting')
                    span CSS
                    i.glyphicon.glyphicon-cog.setting.css-setting
                div.demo-editor#editor-css
        div.row.editor-row
            article.col-xs-6.javascript.editor-window
                span.editor-label(data-toggle='modal',data-target='#javascript-setting')
                    span JavaScript
                    i.glyphicon.glyphicon-cog.setting.js-setting
                div.demo-editor#editor-javascript
            article.col-xs-6.editor-window.result
                span.editor-label Result
                iframe.editor-result
        div.modal.fade#html-setting(data-type='html')
            div.modal-dialog
                div.modal-content
                    div.modal-header
                        button.close(type='button', data-dismiss='modal')
                            span(aria-hidden='true') &times;
                            span.sr-only Close
                        h3.modal-title HTML Setting
                    div.modal-body
                        h3 Language select
                        div.language-select
                            a.btn.btn-default.language(href='javascript:;', data-lang='HTML') HTML
                            a.btn.btn-default.language(href='javascript:;', data-lang='Markdown') Markdown
                            a.btn.btn-default.language(href='javascript:;', data-lang='Jade') Jade

                    div.modal-footer
                        button.btn.btn-primary(type='button', data-dismiss='modal') Save
        div.modal.fade#javascript-setting(data-type='javascript')
            div.modal-dialog
                div.modal-content
                    div.modal-header
                        button.close(type='button', data-dismiss='modal')
                            span(aria-hidden='true') &times;
                            span.sr-only Close
                        h3.modal-title JavaScript Setting
                    div.modal-body
                        h3 Language select
                        div.language-select
                            a.btn.btn-default.language(href='javascript:;', data-lang='JavaScript') JavaScript
                            a.btn.btn-default.language(href='javascript:;', data-lang='Coffee') CoffeeScript
                        hr
                        div.btn-group
                            button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown')
                                | Add libs
                                span.caret
                            div.input-group
                                input.form-control.external-lib(type='text', placeholder='External libs')
                                div.input-group-btn
                                    button.btn.btn-default.add-external Add
                            ul.dropdown-menu.select-libs(role='menu')
                                li: a(href='#', data-lib='jQuery') jQuery
                                li: a(href='#', data-lib='Backbone') Backbone
                                li: a(href='#', data-lib='Underscore') Underscore
                                li: a(href='#', data-lib='Angular') Angular
                                li: a(href='#', data-lib='Ember') Ember

                        div.panel.panel-default
                            div.panel-heading
                                h3.panel-title Added libs
                            div.panel-body
                                div.list-group.libs-list

                    div.modal-footer
                        button.btn.btn-primary(type='button', data-dismiss='modal') Save
        div.modal.fade#css-setting(data-type='css')
            div.modal-dialog
                div.modal-content
                    div.modal-header
                        button.close(type='button', data-dismiss='modal')
                            span(aria-hidden='true') &times;
                            span.sr-only Close
                        h3.modal-title CSS Setting
                    div.modal-body
                        h3 Language select
                        div.language-select
                            a.btn.btn-default.language(href='javascript:;', data-lang='CSS') CSS
                            a.btn.btn-default.language(href='javascript:;', data-lang='SCSS') SCSS
                        hr
                        div.input-group
                            input.form-control.external-lib(type='text', placeholder='External libs')
                            div.input-group-btn
                                button.btn.btn-default.add-external Add
                        div.panel.panel-default
                            div.panel-heading
                                h3.panel-title Added libs
                            div.panel-body
                                div.list-group.libs-list

                    div.modal-footer
                        button.btn.btn-primary(type='button', data-dismiss='modal') Save      

block extra_script
    script(src='/javascripts/jquery-2.1.0.min.js', type='text/javascript')
    script(src='/ace/ace.js')
    script(src='/ace/ext-emmet.js')
    script(src='/javascripts/emmet.js')
    script(src='/javascripts/bootstrap.js', type='text/javascript')
    script(src='/javascripts/script.js', type='text/javascript')