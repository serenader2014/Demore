extends layout
block extra_css
    link(href='/stylesheets/bootstrap.css', type='text/css', rel='stylesheet')
    link(href='/stylesheets/codemirror.css', type='text/css', rel='stylesheet')
block content
    section.container
        nav.navbar.navbar-default.navbar-static-top(role='navigation')
            header.navbar-header
                button(type='button', data-toggle='collapse', data-target='.navbar-collapse').navbar-toggle
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='#') Demo Tools
            header.navbar-collapse.collapse
                ul.nav.navbar-nav
                    li: a.run(href='#') Run
                    li: a(href='#') Browse All Project
                ul.nav.navbar-nav.navbar-right
                    li: a(href='/signin') Sign In
                    li: a(href='/signup') Sign Up
    section.col-xs-2.leftsidebar
        div lallaalalallal
    section.editor-wrapper
        div.row.editor-row
            article.col-xs-6.html.editor-window
                span.editor-label HTML
                textarea.editor-html
            article.col-xs-6.css.editor-window
                span.editor-label CSS
                textarea.editor-css
        div.row.editor-row
            article.col-xs-6.javascript.editor-window
                span.editor-label JavaScript
                textarea.editor-javascript
            article.col-xs-6.editor-window
                span.editor-label Result
                iframe.editor-result
block extra_script
    script(src='/javascripts/jquery-2.1.0.min.js', type='text/javascript')
    script(src='/javascripts/codemirror.js')
    script(src='/javascripts/bootstrap.js', type='text/javascript')
    script(src='/javascripts/css.js', type='text/javascript')
    script(src='/javascripts/xml.js', type='text/javascript')
    script(src='/javascripts/javascript.js', type='text/javascript')
    script(src='/javascripts/script.js', type='text/javascript')